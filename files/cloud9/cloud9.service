[Unit]
Description=Cloud9
Requires=network.target
After=network.target

[Service]
Type=simple
EnvironmentFile=
Environment=IP={{ srv.host }} PORT={{ srv.port }}
WorkingDirectory={{ DIR.stdout }}/webapp
ExecStart=/usr/bin/env node server.js -w {{ DIR.stdout }}/workspace
PIDFile=/var/run/{{ NAME.stdout }}.pid
User={{ srv.user }}

[Install]
WantedBy=multi-user.target
