[Unit]
Description=Cloud9
Requires=network.target
After=network.target

[Service]
Type=simple
EnvironmentFile=
Environment=IP={{ srv.host }} PORT={{ srv.port }}
WorkingDirectory=/srv/cloud9/webapp
ExecStart=/usr/bin/env node server.js -w /srv/cloud9/workspace
PIDFile=/var/run/cloud9.pid
User={{ srv.user }}

[Install]
WantedBy=multi-user.target
